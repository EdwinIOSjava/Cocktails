<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:background="@drawable/background_gradiant"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:paddingBottom="24dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/TitleMain"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="@string/SubtitleMain"
        android:textAlignment="textStart"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="50dp"
        android:layout_marginVertical="10dp"
        android:text="@string/textRecyclerView"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal"

        tools:listitem="@layout/item_cocktail" />
    <!--app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"-->

    <Button
        android:id="@+id/searchCocktailButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="70dp"
        android:layout_marginVertical="4dp"
        android:backgroundTint="@color/buttonColor"
        android:shadowRadius="12"
        android:text="@string/SearchCocktailButton"
        android:textSize="20sp" />

    <Button
        android:id="@+id/ingredientButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="70dp"
        android:layout_marginVertical="4dp"
        android:backgroundTint="@color/buttonColor"
        android:text="@string/IngredientButton"
        android:textSize="20sp" />

    <Button
        android:id="@+id/randomButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="70dp"
        android:layout_marginVertical="4dp"
        android:backgroundTint="@color/buttonColor"
        android:text="@string/RandomButton"
        android:textSize="20sp" />

    <Button
        android:id="@+id/favoritesButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="70dp"
        android:layout_marginVertical="4dp"
        android:backgroundTint="@color/buttonColor"
        android:text="@string/FavoritesButton"
        android:textSize="20sp" />

    <Button
        android:id="@+id/filterByGlassButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="70dp"
        android:layout_marginVertical="10dp"
        android:backgroundTint="@color/buttonColor"
        android:text="@string/FilterByGlassButton"
        android:textSize="20sp" />


</LinearLayout>