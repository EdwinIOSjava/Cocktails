<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center_horizontal"
    android:background="@drawable/background_gradiant">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="@string/TitleMain"
        android:textAlignment="center"
        android:textSize="30sp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/SubtitleMain"
        android:textAlignment="textStart"
        android:textSize="20sp"
        android:layout_margin="20dp"/>
    <TextView
        android:id="@+id/textView"
        android:text="@string/textRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="50dp"
        android:layout_marginVertical="10dp"
        android:textSize="20sp"
        android:textAlignment="center"
        android:textStyle="bold"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/recyclerView"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:orientation="horizontal"
        tools:listitem="@layout/item_cocktail"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/firstLetterButton"
        android:text="@string/FirstLetterButton"
        android:backgroundTint="@color/buttonColor"
        android:layout_marginHorizontal="50dp"
        android:layout_marginVertical="10dp"
        android:textSize="20sp" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ingredientButton"
        android:text="@string/IngredientButton"
        android:backgroundTint="@color/buttonColor"
        android:layout_marginHorizontal="50dp"
        android:layout_marginVertical="10dp"
        android:textSize="20sp"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/randomButton"
        android:text="@string/RandomButton"
        android:backgroundTint="@color/buttonColor"
        android:layout_marginHorizontal="50dp"
        android:layout_marginVertical="10dp"
        android:textSize="20sp"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/favoritesButton"
        android:text="@string/FavoritesButton"
        android:backgroundTint="@color/buttonColor"
        android:layout_marginHorizontal="50dp"
        android:layout_marginVertical="10dp"
        android:textSize="20sp"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/filterByGlassButton"
        android:text="@string/FilterByGlassButton"
        android:backgroundTint="@color/buttonColor"
        android:layout_marginHorizontal="50dp"
        android:layout_marginVertical="10dp"
        android:textSize="20sp"
        />




</LinearLayout>